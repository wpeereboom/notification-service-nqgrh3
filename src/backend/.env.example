# -------------------
APP_NAME=Notification Service
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=UTC
APP_KEY=base64:your_encryption_key
APP_VERSION=1.0.0

# Logging Configuration
# --------------------
LOG_CHANNEL=stack
LOG_LEVEL=debug
LOG_RETENTION_DAYS=90

# Database Configuration
# ---------------------
DB_CONNECTION=pgsql
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=notification_service
DB_USERNAME=postgres
DB_PASSWORD=null
DB_READ_HOST=localhost
DB_MAX_CONNECTIONS=100
DB_TIMEOUT=5
DB_STRICT=true

# Redis Configuration
# ------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=null
REDIS_CACHE_TTL=3600
REDIS_TIMEOUT=2

# AWS Configuration
# ----------------
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_SESSION_TOKEN=null
AWS_REGION=us-east-1
AWS_BACKUP_REGION=us-west-2
AWS_SES_FROM_EMAIL=notifications@example.com
AWS_SNS_IOS_ARN=arn:aws:sns:region:account:app/APNS/app-name
AWS_SNS_ANDROID_ARN=arn:aws:sns:region:account:app/GCM/app-name

# Queue Configuration
# ------------------
QUEUE_CONNECTION=sqs
QUEUE_PREFIX=notification-service
QUEUE_BATCH_SIZE=10
QUEUE_RETRY_ATTEMPTS=3
QUEUE_VISIBILITY_TIMEOUT=30

# Cache Configuration
# ------------------
CACHE_DRIVER=redis
CACHE_PREFIX=notification_service
CACHE_TTL=3600

# Security Configuration
# ---------------------
JWT_SECRET=your_jwt_secret
JWT_TTL=3600
JWT_REFRESH_TTL=43200
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_MINUTES=1

# Vendor Configuration
# -------------------
# Email Service Providers
ITERABLE_API_KEY=your_iterable_key
SENDGRID_API_KEY=your_sendgrid_key

# SMS Service Providers
TELNYX_API_KEY=your_telnyx_key
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token

# Vendor Settings
VENDOR_TIMEOUT=5
VENDOR_RETRY_ATTEMPTS=3
VENDOR_FAILOVER_THRESHOLD=0.95

# Monitoring Configuration
# -----------------------
MONITORING_ENABLED=true
TRACING_ENABLED=true
METRICS_INTERVAL=60

# Feature Flags
# -------------
FEATURE_MULTI_REGION=false
FEATURE_VENDOR_FAILOVER=true
FEATURE_RATE_LIMITING=true